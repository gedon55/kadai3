  <p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      
      <table class="table table-inverse">
      <tr>
	    <td>name</td>
	    <td><%= @user.name %></td>
      </tr>
      <tr>
	    <td>introduction</td>
	      <!--@user.introduction-->
      </tr>
      </table>
      
      <div class="row">
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block",method: :get do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
      </div>
      
      <div class="form-group">
      <label for="book_titile">Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
      </div>
      
      <div class="form-group">
      <%= f.submit 'Creat Book', class:"btn btn-success" %>
      </div>
      <% end %>
      
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse" >
        
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
      
      <% @books.each do |book| %>
      <tr>
      <td><%= link_to user_path(book.user_id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %></td>
      <% end %>

      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%=link_to book.body %></td>
      </tr>
      <% end %>
      
      </table>
    </div>
  </div>
</div>

