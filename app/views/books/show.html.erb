<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      
      <table class="table table-inverse">
      <tr>
	    <td>name</td>
	    <td><%= @book.user.name %></td>
      </tr>
      <tr>
	    <td>introduction</td>
	    <td><!--@user.introduction--></td>
      </tr>
      </table>
      
      <div class="row">
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block",method: :get do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model: @book_new do |f| %>
      <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
      </div>
      
      <div class="form-group">
      <label for="book_titile">Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
      </div>
      
      <div class="form-group">
      <%= f.submit 'Creat Book', class:"btn btn-success" %>
      </div>
      <% end %>
      
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table table-inverse">
        
      
      <tr>
      <td><%= link_to user_path(@book.user.id) do %>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <nav><%=@book.user.name %></nav>
      <% end %>
      </td>
      
      <td><%= link_to @book.title %></td>
      <td><%=@book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete,data:{confirm: "本当に消しますか？"} %></td>
      </tr>
      
      </table>
    </div>
  </div>
</div>
